<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:id="@+id/leaderboards_container"
        android:layout_weight="2"
        android:name="com.example.mobilehw2_nivshalom.fragments.LeaderboardsFragment" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:id="@+id/map_fragment"
        android:layout_weight="3.5"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:gravity="center">

        <Button
            android:layout_width="150sp"
            android:layout_height="match_parent"
            android:layout_marginEnd="20sp"
            android:text="@string/back_btn_label"
            android:id="@+id/leaderboards_back_btn"/>

        <Button
            android:layout_width="150sp"
            android:layout_height="match_parent"
            android:layout_marginStart="20sp"
            android:text="@string/reset_map_label"
            android:id="@+id/leaderboards_clear_btn"/>

    </LinearLayout>

</LinearLayout>